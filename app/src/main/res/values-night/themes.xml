    <style name="Theme.21DayHabbit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/element</item>
        <item name="colorSecondaryVariant">@color/element</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">#ffffffff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Default text font -->
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
</resources>