<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.21DayHabbit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/element</item>
        <item name="colorSecondaryVariant">@color/element</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Default text style -->
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="materialTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/element</item>

        <item name="hintTextAppearance">@style/hintText</item>
        <item name="counterTextAppearance">@style/counterText</item>

        <item name="android:textSize">18sp</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="boxStrokeWidthFocused">5dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="hintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="counterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="materialTextInputEditText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="buttonLeftRounded" parent="">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>

    </style>

    <style name="buttonRightRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>

    </style>

    <style name="buttonSwitch" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/element</item>
        <item name="strokeWidth">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="styledButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/element</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
</resources>